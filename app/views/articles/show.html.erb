<%= render 'shared/header' %>
<%= render 'shared/menu' %>
<div class="container">
  <div class="article-show">
    <% if user_signed_in? && current_user.id == @article.profile.user_id %>
      <i class="fas fa-pencil-alt"></i>
      <%= link_to "編集", edit_article_path, class: "text-dark" %>
      <i class="fas fa-trash-alt"></i>
      <%= link_to "削除", article_path, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-dark" %>
    <% end %>
    <div class="article-show__image">
      <%= image_tag @article.image, class: "article-show-img rounded" %>
    </div>
    <div class="article-show__title">
      <%= @article.title %>
    </div>
    <%= render 'likes/like' %>
    <div class="">
      <%= image_tag @article.profile.image, class: "article-show-profile-img" %>
    </div>
    <%= link_to @article.profile.name, profile_path(@article_profile.id), class: "text-dark" %>
    <div class="article-show__text">
      <%= @article.text %>
    </div>
  </div>
</div>