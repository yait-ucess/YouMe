          <tr><td>
            <%= link_to "貰ったギフト", profile_gifts_path(current_user.profile), class: "text-secondary" %>
          </td></tr>
        <% end %>
        <tr><td>
          <%= link_to "YouMeの使い方", "#", class: "text-secondary" %>
        </td></tr>
