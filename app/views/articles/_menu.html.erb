          <tr><td>
            <%= link_to "新規登録", new_user_registration_path, class:  "text-secondary" %>
          </td></tr>
        <% end %>
        <% unless user_signed_in? %>
          <tr><td>
            <%= link_to "ログイン", new_user_session_path, class: "text-secondary" %>
