<%= render 'shared/header' %>
<%= render 'shared/menu' %>
<%= form_with model: @article, url: articles_path, local: true do |form| %>
  <%= render 'shared/error_messages', model: form.object %>
  <div class="img-upload">
    <%= image_tag "camera.png", class: "rounded mx-auto d-block", alt: "camera.png", size: "100x100" %>
    <%= form.file_field :image, id:"profile-image" %>
  </div>
  <div class="form-floating">
    <%= form.text_area :title, class: "form-control", placeholder: "記事タイトル", id: "floatingTextarea" %>
    <label for="floatingTextarea"></label>
  </div>
  <div class="form-floating">
    <%= form.text_area :text, class: "form-control", placeholder: "ご自由にお書きください。", id: "floatingTextarea2", style: "height: 600px"%>
    <label for="floatingTextarea2"></label>
  </div>
  <div class="button">
    <%= form.submit "投稿", class: "btn btn-outline-secondary" %>
  </div>
<% end %>